<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAFFDD"
    tools:context=".activity.RegisterActivity">


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="265dp"
        android:layout_height="148dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/logo_Meet_Kick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/meetkick_logo" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="143dp"
        android:layout_height="148dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/immagine_utente"
            android:layout_width="100"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#FFFFFF"
            tools:srcCompat="@tools:sample/avatars" />
    </FrameLayout>


    <LinearLayout
            android:id="@+id/linearLayout"
            android:background="@drawable/layout_bg"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="210dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/ciao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Benvenuto !! "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:fontFamily="@font/mclaren" />


            <TextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Inserisci qui le tue informazioni"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                app:fontFamily="@font/mclaren" />

            <LinearLayout
                android:id="@+id/layout_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Nome"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:fontFamily="@font/mclaren" />

                <EditText
                    android:id="@+id/et_nome"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/layout_form"
                    android:gravity="start"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/layout_nome"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                    android:inputType="text"
                    android:importantForAutofill="no" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Cognome"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="Cognome"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:fontFamily="@font/mclaren" />/>

                <EditText
                    android:id="@+id/et_cognome"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/layout_form"
                    android:gravity="start"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/layout_cognome"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:inputType="text"
                    android:importantForAutofill="no" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Telefono"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:fontFamily="@font/mclaren" />/>

                <EditText
                    android:id="@+id/et_telefono"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/layout_form"
                    android:gravity="start"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/layout_telefono"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:inputType="phone"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Ruolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                android:id="@+id/Ruolo"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Ruolo"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                app:fontFamily="@font/mclaren" />

                <EditText
                    android:id="@+id/et_Ruolo"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/layout_form"
                    android:gravity="start"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/layout_Ruolo"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    android:inputType="text"
                    android:importantForAutofill="no" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_sesso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Sesso"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="Sesso"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:fontFamily="@font/mclaren" />/>


                <EditText
                    android:id="@+id/et_sesso"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/layout_form"
                    android:gravity="start"
                    android:textColor="#000000"
                    app:layout_constraintStart_toStartOf="@+id/layout_sesso"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                    android:inputType="text"
                    android:importantForAutofill="no" />

            </LinearLayout>


             <LinearLayout
            android:id="@+id/layout_età"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Età"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Età"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                app:fontFamily="@font/mclaren" />/>

            <EditText
                android:id="@+id/et_età"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/layout_form"
                android:gravity="start"
                android:textColor="#000000"
                app:layout_constraintStart_toStartOf="@+id/layout_età"
                android:importantForAutofill="no"
                android:inputType="number" />

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/layout_bg"
        android:layout_height="213dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.229">


    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/Email"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/mclaren" />/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/layout_form"
            android:gravity="start"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/layout_email"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:inputType="textEmail"
            android:importantForAutofill="no" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/Password"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/mclaren" />/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/layout_form"
            android:gravity="start"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/layout_password"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Conferma_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/Conferma_Password"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:text="Conferma password"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:fontFamily="@font/mclaren" />/>

        <EditText
            android:id="@+id/et_Conferma_password"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10.5dp"
            android:background="@drawable/layout_form"
            android:gravity="start"
            android:inputType="textPassword"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/layout_Conferma_password"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:importantForAutofill="no" />

    </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="15dp"
            android:text="registrati"
            app:backgroundTint="#4CAF50"
            app:fontFamily="@font/mclaren"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>